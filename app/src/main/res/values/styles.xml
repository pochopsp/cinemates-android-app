        <item name="headerBgColor">@color/yellow_button</item>
        <item name="headerFontColorSelected">#fff</item>
        <item name="headerFontColorNormal">#85FFFFFF</item>
        <item name="headerTitleColor">#fff</item>
        <item name="dialogActionButtonColor">@color/yellow_button</item>
    </style>

    <style name="no_elements_in_view_title" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/raleway_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="no_elements_in_view_subtitle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textAlignment">center</item>
