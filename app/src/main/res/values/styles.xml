    <style name="CineMates.BackIcon" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">18dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:src">@drawable/ic_baseline_keyboard_backspace_24</item>
    </style>

    <style name="CineMates.SecondaryPageTitleTextView" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="CineMates.CarouselRecyclerTitleTextView" parent="Widget.AppCompat.TextView">
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CineMates.MoreOptionsIcon" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginEnd">14dp</item>
        <item name="android:src">@drawable/ic_baseline_more_vert_24</item>
    </style>

    <style name="CineMates.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/yellow_button</item>
        <item name="android:fontFamily">@font/raleway_extrabold</item>
        <item name="android:textColor">@color/black</item>
