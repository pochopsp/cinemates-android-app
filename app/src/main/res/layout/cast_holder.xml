<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="80dp"
    android:layout_height="190dp"
    android:background="@drawable/rounded10dp_rectangle_shape_gray">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/cast_imageview"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:contextClickable="false"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        android:src="@drawable/no_cast_photo_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/CineMates.TopRoundedImageViewStyle" />

    <TextView
        android:id="@+id/cast_name_textview"
        style="@style/CineMates.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cast_imageview"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="7dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="5dp"
        android:text="Jim Carrey"
        android:textAlignment="viewStart"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/cast_character_textview"
        style="@style/CineMates.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cast_imageview"
        android:layout_alignStart="@+id/cast_name_textview"
        android:layout_marginStart="0dp"
        android:layout_marginTop="35dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:text="Dr. Robotnic"
        android:textAlignment="viewStart"
        android:textSize="10sp" />

</RelativeLayout>